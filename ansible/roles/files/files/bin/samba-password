#!/bin/bash
# Generated By: Cursor (Claude Sonnet 4)
# Samba password management script

set -e

USER_NAME="${1:-$USER}"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}Samba Password Management${NC}"
echo "========================="
echo

# Check if samba is installed
if ! command -v smbpasswd >/dev/null 2>&1; then
    echo -e "${RED}Error: Samba is not installed on this system.${NC}"
    echo "Please install samba first using: sudo dnf install samba"
    exit 1
fi

# Check if user exists in system
if ! id "$USER_NAME" >/dev/null 2>&1; then
    echo -e "${RED}Error: System user '$USER_NAME' does not exist.${NC}"
    exit 1
fi

# Check if samba user exists
echo -e "${BLUE}Checking if Samba user '$USER_NAME' exists...${NC}"
if sudo pdbedit -L | grep -q "^$USER_NAME:"; then
    echo -e "${GREEN}✓ Samba user '$USER_NAME' exists${NC}"
    echo -e "${YELLOW}Setting new password for Samba user '$USER_NAME'...${NC}"
    echo
    sudo smbpasswd "$USER_NAME"
else
    echo -e "${YELLOW}⚠ Samba user '$USER_NAME' does not exist${NC}"
    echo -e "${BLUE}Creating Samba user '$USER_NAME' and setting password...${NC}"
    echo
    sudo smbpasswd -a "$USER_NAME"
fi

echo
echo -e "${GREEN}✓ Samba password setup complete for user '$USER_NAME'${NC}"
echo -e "${BLUE}You can now access Samba shares using this username and password.${NC}"
# Generated By: Cursor (Claude Sonnet 4)
# .bashrc - Main bashrc that sources modular configuration
# This file is managed by ansible - user customizations go in ~/.bashrc.d/99-user

# Source all configuration files in ~/.bashrc.d/ in numerical order
if [ -d ~/.bashrc.d ]; then
    for file in ~/.bashrc.d/[0-9][0-9]-*; do
        if [ -r "$file" ]; then
            . "$file"
        fi
    done
fi
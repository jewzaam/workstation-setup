#export PS1="${C_HOSTNAME}\u@\h \$(grep OC_USER ~/.oc/\$KUBECONFIG/data 2>/dev/null | sed 's/\(kube:admin\)/${C_OC_USER_WARN}\1/g' | awk -F= '{print \"${C_OC_USER}\" \$2}')\$(grep OC_CLUSTER ~/.oc/\$KUBECONFIG/data 2>/dev/null | awk -F= '{print \"${C_OC_AT}@${C_OC_HOST}\" \$2}')\$(grep OC_OTHER ~/.oc/\$KUBECONFIG/data 2>/dev/null | awk -F= '{print \"${C_OC_OTHER}\" \$2}') \$(git branch 2> /dev/null | grep '^\*' | awk '{print \"(${C_BRANCH_OTHER}\" \$2 \"${C_HOSTNAME}) \"}' | sed 's/\(.*\]\)\(master\|main\|prod\)\(.*\)/(${C_BRANCH_WARN}\2\3/g')${C_PWD}\W${C_PROMPT}\$${NO_COLOR} "

# attempting to add ocm environment
export PS1="${C_HOSTNAME}\u@bob \$(grep OCM_ENV ~/.oc/\$KUBECONFIG/data 2>/dev/null | awk -F= '{print \"${C_OCM_ENV}\" \$2 \" \"}')\$(grep OC_USER ~/.oc/\$KUBECONFIG/data 2>/dev/null | sed 's/\(kube:admin\)/${C_OC_USER_WARN}\1/g' | awk -F= '{print \"${C_OC_USER}\" \$2}')\$(grep OC_CLUSTER ~/.oc/\$KUBECONFIG/data 2>/dev/null | awk -F= '{print \"${C_OC_AT}@${C_OC_HOST}\" \$2}')\$(grep OC_OTHER ~/.oc/\$KUBECONFIG/data 2>/dev/null | awk -F= '{print \"${C_OC_OTHER}\" \$2}') \$(git branch 2> /dev/null | grep '^\*' | awk '{print \"(${C_BRANCH_OTHER}\" \$2 \"${C_HOSTNAME}) \"}' | sed 's/\(.*\]\)\(master\|main\|prod\)\(.*\)/(${C_BRANCH_WARN}\2\3/g')${C_PWD}\W${C_PROMPT}\$${NO_COLOR} "
